<h1>Your Wikis</h1>

<div class="row">
  <div class="col-md-8">
  </br>
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.name, wiki %>
          </h4>

        </div>
      </div>
    <% end %>
    
  </div>
  <div class="col-md-4">
    <% if policy(Wiki.new).create? %>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success btn-lg' %>
    <% end %>
  </div>
</div>
    

